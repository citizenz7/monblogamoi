{% extends 'base.html.twig' %}

{% block title %}{{ site_name }} - {% trans %}Administration{% endtrans %}{% endblock %}

{% block body %}

    <div class="row mb-4">

        <div class="col-3 py-3 rounded border">
            <h5 class="bg-light rounded p-2">{{ site_name }}</h5>
            <hr>

            <h5>{% trans %}Articles{% endtrans %}</h5>
            <div class="d-grid gap-2 mb-3">
                <a href="{{ path('article_admin_index') }}" class="btn btn-primary"><i class="fas fa-list"></i> {% trans %}Liste des articles{% endtrans %}</a>
                <a href="{{ path('article_new') }}" class="btn btn-success"><i class="fas fa-plus"></i> {% trans %}Créer un article{% endtrans %}</a>
            </div>
            <h5>{% trans %}Catégories{% endtrans %}</h5>
            <div class="d-grid gap-2 mb-3">
                <a href="{{ path('category_admin_index') }}" class="btn btn-info"><i class="fas fa-list"></i> {% trans %}Liste des catégories{% endtrans %}</a>
                <a href="{{ path('category_new') }}" class="btn btn-success"><i class="fas fa-plus"></i> {% trans %}Créer une catégorie{% endtrans %}</a>
            </div>
            <h5>{% trans %}Tags{% endtrans %}</h5>
            <div class="d-grid gap-2 mb-3">
                <a href="{{ path('tag_admin_index') }}" class="btn btn-warning"><i class="fas fa-list"></i> {% trans %}Liste des tags{% endtrans %}</a>
                <a href="{{ path('tag_new') }}" class="btn btn-success"><i class="fas fa-plus"></i> {% trans %}Créer un tag{% endtrans %}</a>
            </div>
            <h5>{% trans %}Commentaires{% endtrans %}</h5>
            <div class="d-grid gap-2 mb-3">
                <a href="{{ path('comment_index') }}" class="btn btn-secondary"><i class="fas fa-list"></i> {% trans %}Liste des commentaires{% endtrans %}</a>
            </div>
            <h5>{% trans %}Utilisateurs{% endtrans %}</h5>
            <div class="d-grid gap-2 mb-3">
                <a href="{{ path('user_index') }}" class="btn btn-dark"><i class="fas fa-list"></i> {% trans %}Liste des utilisateurs{% endtrans %}</a>
            </div>
    </div>

        <div class="col-9 ps-3">
            <h2 class="bg-light rounded p-2">{% trans %}Panneau d'Administration{% endtrans %}</h2>
            <hr>

            {% block admin %}
                {{ admin() }}
            {% endblock %}

        </div>

    </div>

{% endblock %}
