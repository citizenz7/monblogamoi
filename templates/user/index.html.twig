{% extends 'base.html.twig' %}

{% block title %}{% trans %}Liste des utilisateurs{% endtrans %}{% endblock %}

{% block body %}
    <h2>{% trans %}Liste des utilisateurs{% endtrans %}</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>IsVerified</th>
                <th>{% trans %}Nom{% endtrans %}</th>
                <th>{% trans %}Prenom{% endtrans %}</th>
                <th>Avatar</th>
                <th>{% trans %}CrÃ©Ã© le{% endtrans %}</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.avatar }}</td>
                <td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('user_show', {'id': user.id}) }}">{% trans %}Voir{% endtrans %}</a>
                    <a href="{{ path('user_edit', {'id': user.id}) }}">{% trans %}Modifier{% endtrans %}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">{% trans %}Il n'y a aucun enregistrement.{% endtrans %}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
