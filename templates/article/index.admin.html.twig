{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
    <h1>Liste des articles</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th width="15%">Posté le</th>
                <th width="15%">Modifié le</th>
                <th width="11%"></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.title }}</td>
                <td>{{ article.createdAt ? article.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    {% if article.updatedAt %}
                        {{ article.updatedAt ? article.updatedAt|date('Y-m-d H:i:s') : '' }}
                    {% endif %}
                </td>
                <td>
                    <a class="btn btn-sm btn-primary" href="{{ path('article_show', {'slug': article.slug}) }}">Voir</a>
                    <a class="btn btn-sm btn-warning" href="{{ path('article_edit', {'slug': article.slug}) }}">Modifier</a>
                </td>
                <td>
                    {{ include('article/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('article_new') }}">Creéer un nouvel article</a>
{% endblock %}
