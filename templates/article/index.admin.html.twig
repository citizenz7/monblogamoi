{% extends 'base.html.twig' %}

{% block title %}{{ site_name }} - {% trans %}Liste des articles{% endtrans %}{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>{% trans %}Liste des articles{% endtrans %}</h2>

        <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('admin') }}">Admin index</a></li>
                <li class="breadcrumb-item active" aria-current="page">Liste des articles</li>
            </ol>
        </nav>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>{% trans %}Titre{% endtrans %}</th>
                <th width="15%">{% trans %}Posté le{% endtrans %}</th>
                <th width="15%">{% trans %}Modifié le{% endtrans %}</th>
                <th width="11%"></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.title }}</td>
                <td>{{ article.createdAt ? article.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    {% if article.updatedAt %}
                        {{ article.updatedAt ? article.updatedAt|date('Y-m-d H:i:s') : '' }}
                    {% endif %}
                </td>
                <td>
                    <a class="btn btn-sm btn-primary" href="{{ path('article_show', {'slug': article.slug}) }}">{% trans %}Voir{% endtrans %}</a>
                    <a class="btn btn-sm btn-warning" href="{{ path('article_edit', {'slug': article.slug}) }}">{% trans %}Modifier{% endtrans %}</a>
                </td>
                <td>
                    {{ include('article/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">{% trans %}Il n'y a aucun enregistrement{% endtrans %}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="pagination justify-content-center px-2 mt-5">
        {{ knp_pagination_render(articles) }}
    </div>

{% endblock %}
