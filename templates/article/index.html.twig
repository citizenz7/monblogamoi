{% extends 'base.html.twig' %}

{% block title %}{% trans %}Tous les articles{% endtrans %}{% endblock %}

{% block body %}
<h2 class="border-bottom mb-4 text-primary">{% trans %}Tous les articles{% endtrans %}</h2>

<div class="row">

    <div class="col-9 pe-4">
        {% for article in articles %}
            <a href="{{ path('article_show', {'slug': article.slug}) }}" class="text-decoration-none text-dark h4">{{ article.title }}</a>
            <p class="mt-1 fst-italic">
                {{ article.presentation }}
            </p>
            <p>
                <img src="{{ asset('uploads/images/articles/' ~ article.image) }}" class="img-fluid img-thumbnail float-end article-index-image ms-3 mt-1" alt="{{ article.title }}">
                {{ article.content|slice(0,250)|raw }}...
            </p>
            <a href="{{ path('article_show', {'slug': article.slug}) }}" class="text-decoration-none">
                <span>{% trans %}Lire la suite{% endtrans %} &#8594;</span>
            </a>
            <hr>
        {% endfor %}
    </div>
    <div class="col-3 shadow pt-3">
        {% block sidebar %}
            {{ sidebar() }}
        {% endblock %}
    </div>

    <div class="col-9 pagination justify-content-center px-2 mt-3 mb-5">
        {{ knp_pagination_render(articles) }}
    </div>

</div>

<div class="row">
    <div class="col-4">
        <h5 class="border-bottom">Linux</h5>

        <a href="#" class="text-decoration-none text-dark">
            <h6>Titre de l'article très bien dans cette catégorie</h6>
            <p class="mb-4 small">
                Présentation : Huic Arabia, ex alio latere Nabataeis contigua; 
                conmerciorum castrisque oppleta validis et castellis, repellendos gentium.
            </p>
        </a>

        <a href="#" class="text-decoration-none text-dark">
            <h6>Titre de l'article très bien dans cette actégorie</h6>
            <p class="mb-4 small">
                Présentation : ex alio latere Nabataeis contigua; 
                conmerciorum oppleta validis et castellis, ad repellendos gentium vicinarum.
            </p>
        </a>

        <a href="#" class="text-decoration-none text-dark">
            <h6>Titre de l'article très bien dans cette actégorie</h6>
            <p class="mb-4 small">
                Présentation : Huic Arabia est conserta, ex alio latere ; opima varietate 
                oppleta validis et castellis.
            </p>
        </a>
    </div>

    <div class="col-4">
        <h5 class="border-bottom">Windows</h5>

    </div>

    <div class="col-4">
        <h5 class="border-bottom">Société</h5>

    </div>
</div>

{% endblock %}