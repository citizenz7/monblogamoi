{% extends 'base.html.twig' %}

{% block title %}Comment index{% endblock %}

{% block body %}
    <h2>Liste des commentaires</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Message</th>
                <th>Actif</th>
                <th>Pseudo</th>
                <th>RGPD</th>
                <th width="14%">Post√© le</th>
                <th width="11%"></th>
                <th width="4%"></th>
            </tr>
        </thead>
        <tbody>
        {% for comment in comments %}
            <tr>
                <td>{{ comment.id }}</td>
                <td>{{ comment.content }}</td>
                <td>{{ comment.active ? 'Oui' : 'Non' }}</td>
                <td>{{ comment.nickname }}</td>
                <td>{{ comment.rgpd ? 'Oui' : 'Non' }}</td>
                <td>{{ comment.createdAt|format_datetime('medium', 'short') }}</td>
                <td>
                    <a class="btn btn-sm btn-info" href="{{ path('comment_show', {'id': comment.id}) }}">voir</a>
                    <a class="btn btn-sm btn-warning" href="{{ path('comment_edit', {'id': comment.id}) }}">modifier</a>
                </td>
                <td>
                    {{ include('comment/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Il n'y a aucun enregistrement.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="pagination justify-content-center px-2 mt-5 mb-3">
        {{ knp_pagination_render(comments) }}
    </div>

{% endblock %}
